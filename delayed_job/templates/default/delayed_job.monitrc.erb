<% @workers.each do |worker| %>
check process <%= @app %>_delayed_job<%= worker[:suffix] %> with pidfile <%= @dir %>/shared/pids/delayed_job<%= worker[:suffix] %>.pid
  start program = "/bin/su -c 'cd <%= @dir %>/current; /usr/bin/env RAILS_ENV=<%= @env %> <%= @dir %>/current/bin/delayed_job start<%= " --identifier=#{worker[:identifier]}" if worker[:identifier] %> <%= worker[:options] %>' - <%= @user %>"
    with timeout <%= worker[:timeout] %> seconds
  stop program = "/bin/su -c 'cd <%= @dir %>/current; /usr/bin/env RAILS_ENV=<%= @env %> <%= @dir %>/current/bin/delayed_job stop<%= " --identifier=#{worker[:identifier]}" if worker[:identifier] %>' - <%= @user %>"
    with timeout <%= worker[:timeout] %> seconds
  group delayed_job
<% end %>
